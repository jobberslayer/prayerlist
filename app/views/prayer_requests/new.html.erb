<%= form_for(@prayer_request, url: prayer_requests_path) do |f| %>
  <div>
    <%= f.label :title %><br/>
    <%= f.text_field :title%>
  </div>
  <div>
    <%= f.label :request_text %><br/>
    <%= f.text_area :request_text %>
  </div>

  <div>
    <%= f.submit "Create", class: "btn btn-large btn-primary"%>
  </div>
<% end %>
